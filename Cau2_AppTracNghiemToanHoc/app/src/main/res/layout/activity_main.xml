<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#2C2D3A">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="40dp"
        android:paddingTop="40dp">
        <TextView
            android:id="@+id/tv_time"
            android:layout_marginTop="15dp"
            android:text="16s"
            android:textSize="35dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginBottom="30dp"
            android:fontFamily="@font/b612_mono"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/clock_icon"/>

        <ImageView
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="10dp"
            android:id="@+id/clock_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/clock"
            android:background="#2C2D3A"
            android:layout_alignParentStart="true"
            />

        <TextView
            android:id="@+id/tv_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="30dp"
            android:fontFamily="@font/b612_mono"
            android:text="Score\n20"
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_de"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2*3+6/9*7"
        android:textAlignment="center"
        android:textSize="50dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/rounded_rectangle"
        android:padding="20dp"
        android:layout_marginHorizontal="30dp"/>

    <Button
        android:id="@+id/bnt_a"
        android:text="12"
        android:textSize="45dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textAlignment="textStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#F9E8D4"
        android:paddingLeft="35dp"
        android:layout_marginTop="25dp"
        android:layout_marginHorizontal="30dp"/>

    <Button
        android:id="@+id/bnt_b"
        android:text="33"
        android:textSize="45dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textAlignment="textStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#F9E8D4"
        android:paddingLeft="35dp"
        android:layout_marginTop="25dp"
        android:layout_marginHorizontal="30dp"/>
    <Button
        android:id="@+id/bnt_c"
        android:text="49"
        android:textSize="45dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textAlignment="textStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#F9E8D4"
        android:paddingLeft="35dp"
        android:layout_marginTop="25dp"
        android:layout_marginHorizontal="30dp"/>
    <Button
        android:id="@+id/bnt_d"
        android:text="53"
        android:textSize="45dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textAlignment="textStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#F9E8D4"
        android:paddingLeft="35dp"
        android:layout_marginTop="25dp"
        android:layout_marginHorizontal="30dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_count"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:fontFamily="@font/b612_mono"
            android:text="0/10"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold"
            />
        <ImageButton
            android:id="@+id/btn_cai_dat"
            android:src="@drawable/setup"
            android:background="#2C2D3A"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="100dp"
            android:layout_width="50dp"
            android:layout_height="50dp" />
    </LinearLayout>

</LinearLayout>